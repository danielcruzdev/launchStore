{% extends "layout.njk" %}

{% block content %}

<div class="card-show">
    <section class="avatar" style="background: url({{ member.avatar_url }}) no-repeat center center / cover"></section>
    <section class="details">

        <h3>{{ member.name }}</h3>

        <div class="item">
            <div>Instrutor</div>
            <div>{{ member.name }}</div>
        </div>

        <div class="item">
            <div>Anivers√°rio</div>
            <div>{{ member.birth }}</div>
        </div>

        <div class="item">
            <div>E-mail</div>
            <div>{{ member.email }}</div>
        </div>

        <div class="item">
            <div>Sexo</div>
            <div>{{ "Masculino" if member.gender == "M" else "Feminino" }}</div>
        </div>


        <a href="/members/{{ member.id }}/edit" class="button edit-button">Editar</a>

    </section>
    <section class="details details2">

        <div class="item">
            <div>Objetivo</div>
            <div>{{ member.meta }}</div>
        </div>

        <div class="item">
            <div>Peso (kg)</div>
            <div>{{ member.weight }}</div>
        </div>

        <div class="item">
            <div>Altura (cm)</div>
            <div>{{ member.height }}</div>
        </div>

        <div class="item">
            <div>Aluno de</div>
            <div>{{ member.instructor_name }}</div>
        </div>

    </section>
    
    
</div>

{% endblock content %}